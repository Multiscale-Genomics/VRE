}
#bottomlogo {
position:relative;
background-image:url(../images/bottom_new.png);
height:70px;
}
#textBottom{
position:relative;
font-size:9px;
padding:5px;
}
#content {
position:relative;
padding:20px;
min-height:300px;
clear:both;
}
#menu{
position:relative;
padding-left:20px;
padding-right:20px;
z-index:20;
}
.itemmenu a {
float:left;
width:100px;
padding:2px;
font-size:9px;
border-right: solid 1px;
text-align:center;
}
.itemmenuR a{
float:right;
width:50px;
padding:2px;
font-size:9px;
text-align:center;
}
.itemmenu a:hover {
	background-color:#000066; 
	color:#ffffff;
	text-decoration:none;
	}
.itemmenuR a:hover {
	background-color:#000066; 
	color:#ffffff;
	text-decoration:none;
}


