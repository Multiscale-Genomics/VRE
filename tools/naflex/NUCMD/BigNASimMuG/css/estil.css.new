BODY {font-family:Verdana,sans-serif;font-size:9pt;background-color:#c1c1ff;color:#000050}
p, td, th {font-family:Verdana,sans-serif;font-size:12px}
a {color:#000050;text-decoration:none}
a:hover {text-decoration:underline}
.petita {font-size:9px}
h4 {font-size: 12px; border-bottom:solid 1px;width:90%}
h3 { color: #0000ff;}
h3#help a:link {color: #0000FF; background-color:#cccccc;}
#divbase {
position:relative; 
margin:0px auto;
width:800px;
background-image:url(../images/ombra.jpg);
background-repeat:repeat-y;
}
#divcheks{
text-align:left;
vertical-align:top;
}
#divjmol{
text-align:left;
vertical-align:top;	
}
#toplogo {
position:relative;
background-image:url(../images/topLogo.jpg);
height:100px;
}
#userId {
position:absolute;
top:60px;
left:400px;
